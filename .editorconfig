# EditorConfig â€” https://editorconfig.org
# Provides consistent formatting defaults across editors and platforms.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.md]
# Trailing whitespace is significant in Markdown (line breaks).
trim_trailing_whitespace = false

[*.go]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[Dockerfile]
indent_size = 4

[*.nix]
indent_style = space
indent_size = 2
